{
  "name": "graphql-gene-monorepo",
  "version": "0.0.0",
  "description": "Generates automatically an executable schema out of your ORM models",
  "repository": "accesimpot/graphql-gene",
  "type": "module",
  "engines": {
    "node": "^12.22.0 || ^14.16.0 || ^16.0.0 || >=17.0.0"
  },
  "scripts": {
    "dev": "NX_DISABLE_DB=true NODE_ENV=development nx run-many -t dev",
    "build": "NX_DISABLE_DB=true nx run-many -t build",
    "lint": "pnpm lint:all",
    "lint:fix": "pnpm lint:all:fix",
    "lint:all": "pnpm lint:base .",
    "lint:all:fix": "pnpm lint:all --fix",
    "lint:affected": "pnpm lint:base $(git diff --name-only --diff-filter=d origin/main | grep -E \"\\.[mc]?[jt]s$\" | xargs)",
    "lint:affected:fix": "pnpm lint:affected --fix",
    "lint:base": "eslint --cache",
    "format": "prettier --write --cache \"**/*.{js,mjs,cjs,ts,mts,cts,json,yaml,yml,gql,graphql,md}\"",
    "format:check": "prettier --check --cache \"**/*.{js,mjs,cjs,ts,mts,cts,json,yaml,yml,gql,graphql,md}\"",
    "types:check": "NX_DISABLE_DB=true nx run-many -t types:check",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:inspect": "vitest --inspect-brk=0.0.0.0:8806 --no-file-parallelism",
    "test:non-cacheable": "NX_DISABLE_DB=true nx run-many -t test:non-cacheable",
    "dev-utils": "NX_DISABLE_DB=true bash -c 'nx ${0} dev-utils $@'",
    "dev-utils:": "pnpm -F=dev-utils",
    "playground": "NX_DISABLE_DB=true bash -c 'nx ${0} dev-playground $@'",
    "playground:": "pnpm -F=dev-playground",
    "core": "NX_DISABLE_DB=true bash -c 'nx ${0} graphql-gene $@'",
    "core:": "pnpm -F=graphql-gene",
    "sequelize": "NX_DISABLE_DB=true bash -c 'nx ${0} @graphql-gene/plugin-sequelize $@'",
    "sequelize:": "pnpm -F=@graphql-gene/plugin-sequelize"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.3",
    "@eslint/js": "^9.18.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/eslint__js": "^8.42.3",
    "@vitest/coverage-istanbul": "^2.1.8",
    "eslint": "^9.15.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "nx": "20.1.3",
    "prettier": "^3.4.1",
    "semantic-release": "^24.2.0",
    "semantic-release-monorepo": "^8.0.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^2.1.8"
  }
}
