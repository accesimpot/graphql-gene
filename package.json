{
  "name": "graphql-gene-monorepo",
  "version": "0.0.0",
  "description": "Generates automatically an executable schema out of your ORM models",
  "repository": "accesimpot/graphql-gene",
  "type": "module",
  "engines": {
    "node": "^12.22.0 || ^14.16.0 || ^16.0.0 || >=17.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development nx run-many -t dev",
    "build": "nx run-many -t build",
    "lint": "pnpm lint:all",
    "lint:fix": "pnpm lint:all:fix",
    "lint:all": "pnpm lint:base .",
    "lint:all:fix": "pnpm lint:all --fix",
    "lint:affected": "pnpm lint:base $(git diff --name-only --diff-filter=d origin/main | grep -E \"\\.[mc]?[jt]s$\" | xargs)",
    "lint:affected:fix": "pnpm lint:affected --fix",
    "lint:base": "eslint --cache",
    "format": "prettier --write --cache \"**/*.{js,mjs,cjs,ts,mts,cts,json,yaml,yml,gql,graphql,md}\"",
    "format:check": "prettier --check --cache \"**/*.{js,mjs,cjs,ts,mts,cts,json,yaml,yml,gql,graphql,md}\"",
    "types:check": "nx run-many -t types:check",
    "test": "nx run-many -t test",
    "test:watch": "nx run-many -t test:watch",
    "test:non-cacheable": "nx run-many -t test:non-cacheable",
    "dev-utils": "bash -c 'nx ${0} dev-utils $@'",
    "dev-utils:": "pnpm -F=dev-utils",
    "core": "bash -c 'nx ${0} graphql-gene $@'",
    "core:": "pnpm -F=graphql-gene",
    "sequelize": "bash -c 'nx ${0} @graphql-gene/plugin-sequelize $@'",
    "sequelize:": "pnpm -F=@graphql-gene/plugin-sequelize"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.0",
    "@eslint/js": "^9.12.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.12.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "nx": "20.0.0",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.2",
    "semantic-release-monorepo": "^8.0.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.16.0"
  }
}
