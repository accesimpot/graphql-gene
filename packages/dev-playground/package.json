{
  "private": true,
  "name": "dev-playground",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development concurrently --kill-others -p=none \"pnpm build --watch --emptyOutDir=false\" \"nodemon --delay 100ms --inspect --watch ./src/schema.gql --watch ./dist -e js dist/server\"",
    "build": "NODE_ENV=${NODE_ENV:-development} vite build",
    "start": "node dist/server"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "devDependencies": {
    "@types/node": "^20.15.0",
    "concurrently": "^9.0.1",
    "dev-utils": "workspace:*",
    "fastify": "^5.0.0",
    "graphql": "^16.9.0",
    "graphql-gene": "workspace:*",
    "graphql-yoga": "^5.7.0",
    "nodemon": "^3.1.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.1"
  }
}
